---
const { href, title, description } = Astro.props;
---

<a href={href} class="group relative flex flex-col justify-between bg-gray-800/50 backdrop-blur-sm p-8 rounded-2xl overflow-hidden border border-gray-700/80 hover:border-blue-500/60 transition-colors duration-300">
    <!-- Card-wide Glow effect -->
    <div class="absolute -inset-px bg-gradient-to-r from-blue-600 to-teal-600 rounded-2xl opacity-0 group-hover:opacity-30 transition-opacity duration-300 blur-xl"></div>
    
    <div class="relative z-10">
        <div>
            <h3 class="text-2xl font-bold text-white mb-2">{title}</h3>
            <p class="text-gray-400">{description}</p>
        </div>
    </div>

    <div class="relative mt-6 z-10">
        <div class="inline-block bg-gray-700/50 text-blue-300 font-semibold py-2 px-4 rounded-lg transition-all duration-300 
                     group-hover:bg-blue-600 group-hover:text-white group-hover:scale-105 
                     group-hover:shadow-lg group-hover:shadow-blue-500/40">
            Ir a la herramienta <span class="inline-block transition-transform group-hover:translate-x-1 motion-reduce:transform-none">â†’</span>
        </div>
    </div>
</a>