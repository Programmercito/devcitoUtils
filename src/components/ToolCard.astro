---
const { href, title, description, icon: Icon } = Astro.props;
---

<a href={href} class="group relative block bg-gray-800/50 backdrop-blur-sm p-8 rounded-2xl overflow-hidden border border-gray-700/80 hover:border-blue-500/50 transition-all duration-300">
    <!-- Glow effect -->
    <div class="absolute top-0 left-0 w-full h-full bg-blue-500/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300 blur-3xl"></div>
    
    <div class="relative">
        <div class="flex items-center justify-center w-12 h-12 bg-gray-900 rounded-lg mb-4 border border-gray-700">
            <Fragment set:html={Icon} />
        </div>
        <h3 class="text-xl font-bold text-white mb-2">{title}</h3>
        <p class="text-gray-400">{description}</p>
    </div>
</a>
